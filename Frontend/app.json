{
  "expo": {
    "name": "Mediwallet - Health Passport",
    "slug": "mediwallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mediwallet",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "icon":{
        "light":"./assets/icons/ios-light.png",
        "dark":"./assets/icons/ios-dark.png",
        "tinted":"./assets/icons/ios-tinted.png"
      },
      "bundleIdentifier": "com.sparkstorm.mediwallet",
      "usesAppleSignIn": false,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Mediwallet needs access to your photo library to allow you to select and upload medical documents such as lab reports, prescriptions, X-rays, and other health records. For example, you can upload a photo of your blood test results to keep them securely stored in your digital health wallet.",
        "NSPhotoLibraryAddUsageDescription": "Mediwallet needs permission to save downloaded medical documents to your photo library so you can access them offline. For example, after downloading a prescription from the app, you can save it to your Photos for easy sharing with your doctor or pharmacist.",
        "NSCameraUsageDescription": "Mediwallet needs access to your camera to capture photos of medical documents such as prescriptions, lab reports, and doctor's notes. For example, you can take a photo of a new prescription and immediately upload it to your secure health record.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "localhost": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": true,
              "NSTemporaryExceptionMinimumTLSVersion": "1.0"
            },
            "127.0.0.1": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": true,
              "NSTemporaryExceptionMinimumTLSVersion": "1.0"
            },
            "10.0.2.2": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": true,
              "NSTemporaryExceptionMinimumTLSVersion": "1.0"
            }
          }
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.sparkstorm.mediwallet",
      "usesCleartextTraffic": true,
      "networkSecurityConfig": {
        "cleartextTraffic": true
      },
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
         "backgroundColor": "#ffffff",
          "image": "./assets/icons/splash-icon-light.png",
          "dark": {
            "image": "./assets/icons/splash-icon-light.png",
            "backgroundColor": "#000000"
          },
          "imageWidth": 200
        }
      ],
      "expo-secure-store",
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1"
          },
          "android": {
            "usesCleartextTraffic": true,
            "networkSecurityConfig": {
              "cleartextTraffic": true
            }
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}